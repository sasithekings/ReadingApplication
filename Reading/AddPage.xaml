<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Reading"
             x:Class="Reading.AddPage">



    <StackLayout Padding="20" Spacing="10">

        <Label Text="Title" FontSize="16" TextColor="#3498DB" />
        <Entry Text="{Binding Title}" Placeholder="Enter Title" 
               BackgroundColor="#ECF0F1" TextColor="#2C3E50" 
               HeightRequest="40" />

        <Label Text="Content" FontSize="16" TextColor="#3498DB" />
        <Entry Text="{Binding Content}" Placeholder="Enter Content" 
               BackgroundColor="#ECF0F1" TextColor="#2C3E50" 
               HeightRequest="80" />

        <Button Text="Submit" Command="{Binding SubmitCommand}" 
                BackgroundColor="#3498DB" TextColor="White" 
                CornerRadius="5" HeightRequest="40" />

    </StackLayout>

</ContentPage>
